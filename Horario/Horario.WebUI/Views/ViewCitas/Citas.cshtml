    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Registro de citas</h3>
        </div>

        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">Cita</th>
                    <th class="text-right">Fecha</th>
                    <th class="text-right">Hora</th>
                    <th class="text-right">Persona</th>
                </tr>
                @foreach (var cita in Model)
            {
                    <tr>
                        <td class="text-right">@cita.Folio</td>
                        <td class="text-right">@cita.Fecha.ToShortDateString()</td>
                        <td class="text-right">@cita.Hora_Inicio</td>
                        <td class="text-right">@cita.Correo</td>

                    </tr>
                }
            </table>
        </div>

        <div class="panel-footer">

        </div>
    </div>


