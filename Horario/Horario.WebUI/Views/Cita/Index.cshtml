@model IEnumerable<Horario.Domain.Entities.Cita>

@{
    ViewBag.Title = "Panel de Citas";
    Layout = "~/Views/Shared/_CitasLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Citas</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">Cita</th>
                <th>Persona</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var cita in Model)
            {
                <tr>
                    <td class="text-right">@cita.Folio</td>
                    <td>@Html.ActionLink(cita.Correo, "Editar", new { cita.Folio })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Cita"))
                        {
                            @Html.Hidden("Folio", cita.Folio)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }

                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Crear Cita", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
